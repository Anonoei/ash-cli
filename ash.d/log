function _ash_log_help {
    echo "Usage:  ash log COMMAND"
    echo ""
    echo "ASH logger helper"
    echo ""
    echo "Commands:"
    echo "  help.......................shows this message"
    echo "  new........................create a new logger"
    echo ""
}

if [[ $# -eq 0 ]]; then
    _ash_log_help
    return
fi

ASH_CMD=$1
shift
case $ASH_CMD in
    help|-h|--help)
        _ash_log_help $*
        ;;
    new)
        source $ASH_ROOT/logger $*
        ;;
    *)
        echo "Unknown ash log syntax: ash log $ASH_CMD $*"
        echo "Run 'ash log help' for more information"
        ;;
esac
